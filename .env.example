# API Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# Notion Integration (optional)
# ==============================================
NOTION_API_KEY=your_notion_api_key_here
NOTION_AGENTIC_TASK_TABLE_ID=your_notion_task_table_id_here

# ==============================================
# Supabase Configuration
# ==============================================
# Get these from: https://supabase.com/dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# ==============================================
# OpenAI Configuration
# ==============================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ==============================================
# ElevenLabs Configuration
# ==============================================
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Get Voice IDs from: https://elevenlabs.io/app/voice-library
# Choose voices that sound mystical/wise for Exkatibur in different languages
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here
# English Voice ID (for English notifications)
ELEVENLABS_VOICE_ID_EN=voice_id_here
# German Voice ID (for German notifications)
ELEVENLABS_VOICE_ID_DE=voice_id_here

# ==============================================
# Stripe Configuration
# ==============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# ==============================================
# Project Configuration
# ==============================================
PROJECT_NAME=Kassiopeia
LANGUAGE=de

# Exkatibur Language Settings
# Supported: 'en' (English), 'de' (Deutsch/German)
# Set which language Exkatibur should speak
EXKATIBUR_LANGUAGE=de

# User Configuration
# Your name - Exkatibur will address you by this name
USER_NAME=YourName

# ==============================================
# Test Credentials
# ==============================================
# For automated reviews & E2E tests
# Create a test user in your Supabase Auth dashboard
# IMPORTANT: Use a dedicated test account, NOT your personal account
TEST_EMAIL=test@example.com
TEST_PASSWORD=test_password

# ==============================================
# REQUIRED: HeyGen API Key
# ==============================================
# Get your API key from: https://app.heygen.com/settings/api
HEYGEN_API_KEY=your-api-key-here

# ==============================================
# Avatar Configuration
# ==============================================
# Your default avatar ID from HeyGen dashboard
HEYGEN_AVATAR_ID=33518d47b5d941428b59a89731acf405

# Avatar version (v1, v2, v3, v4)
HEYGEN_AVATAR_VERSION=v4

# ==============================================
# Voice Configuration
# ==============================================
# Voice name or ID (e.g., Barbara, Lily, Emily)
HEYGEN_VOICE=Barbara

# Voice speed (0.5 - 2.0)
HEYGEN_VOICE_SPEED=1.0

# ==============================================
# Generation Settings
# ==============================================
# Generation mode: Faster or Standard
HEYGEN_GENERATION_MODE=Faster

# Default dimension preset
# Options: portrait (9:16), landscape (16:9), square (1:1), hd (720p)
HEYGEN_DIMENSION=portrait

# ==============================================
# Custom Motion (Optional)
# ==============================================
# Detailed motion description for avatar behavior
HEYGEN_CUSTOM_MOTION=The woman begins with a distant, thoughtful gaze, as if contemplating a profound mystery. As she speaks, her eyes gradually focus on the viewer, drawing them into her world. She raises the sword slightly, as if presenting it as a symbol of power and destiny. The red fabric behind her swirls and dances, creating a sense of drama and intrigue. The lighting shifts subtly, casting shadows that accentuate her features and add to the overall sense of mystery. The background sparkles softly, creating a magical atmosphere that enhances the cinematic feel.

# ==============================================
# Output Configuration
# ==============================================
# Default output directory (relative to project root)
HEYGEN_OUTPUT_DIR=content/generated

# ==============================================
# Advanced Settings
# ==============================================
# Timeout for video generation in seconds (default: 600)
HEYGEN_TIMEOUT=600

# Polling interval for status checks in seconds (default: 10)
HEYGEN_POLL_INTERVAL=10
